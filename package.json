{
    "name": "vscode-fsharp-refactor",
    "displayName": "vscode fsharp refactor",
    "description": "F# refactoring tools for vscode",
    "version": "0.3.1",
    "publisher": "danmannock",
    "author": "Dan Mannock",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension",
    "activationEvents": [
        "onCommand:fsharp-refactor.extractLet",
        "onCommand:fsharp-refactor.inlineLet"
    ],
    "contributes": {
        "commands": [
            {
                "command": "fsharp-refactor.extractLet",
                "title": "Extract Let Binding",
                "descriptin": "Extract expression to a let binding",
                "category": "F#Refactor"
            },
            {
                "command": "fsharp-refactor.inlineLet",
                "title": "Inlines Binding",
                "descriptin": "Inlines let binding to usages",
                "category": "F#Refactor"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "fsharp-refactor.extractLet",
                    "when": "editorHasSelection"
                },
                {
                    "command": "fsharp-refactor.inlineLet",
                    "when": "editorTextFocus"
                }
            ]
        },
        "keybindings": [
            {
                "command": "fsharp-refactor.extractLet",
                "key": "Ctrl+Shift+R",
                "mac": "cmd+Shift+R",
                "when": "editorHasSelection"
            },
            {
                "command": "fsharp-refactor.inlineLet",
                "key": "Ctrl+Shift+I",
                "mac": "cmd+Shift+R",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "lint": "tslint -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "build": "npm run lint && npm run compile && node ./node_modules/vscode/bin/test",
        "vscode:prepublish": "npm run build",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.9.1",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/dmannock/vscode-fsharp-refactor.git"
    },
    "keywords": [
        "fSharp",
        "vscode",
        "vscode-extension",
        "tooling",
        "refactoring"
    ]
}
